<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RuntimePermissionActivity">


    <Button android:id="@+id/askRuntimePermission"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:text="ask permission"
            android:textAllCaps="false"
    />

    <Button android:id="@+id/askRuntimePermissionInFragment"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/askRuntimePermission"
            android:text="show fragment"
            android:textAllCaps="false"
    />

    <FrameLayout
            android:id="@+id/frameContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />
</RelativeLayout>